{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Default",
            "displayName": "Default",
            "description": "Default configuration (Abstract)",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "Debug",
            "displayName": "Debug",
            "inherits": [ "Default" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "BUILD_EXAMPLES": "ON"
            }
        },
        {
            "name": "Release",
            "displayName": "Release",
            "inherits": [ "Default" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Coverage",
            "displayName": "Coverage",
            "inherits": [ "Default" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "ENABLE_COVERAGE": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "displayName": "Debug Build",
            "configurePreset": "Debug"
        },
        {
            "name": "Release",
            "displayName": "Release Build",
            "configurePreset": "Release"
        },
        {
            "name": "Coverage",
            "displayName": "Coverage Build",
            "configurePreset": "Coverage"
        }
    ]
}